pipeline {
    agent any

    environment {
        IMAGE_NAME = "bookstore-app"
        CONTAINER_NAME = "bookstore-app"
        DOCKER_NETWORK = "ci-network"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                sh '''
                docker run --rm \
                  -v "$PWD":/app \
                  -v "$HOME/.m2":/root/.m2 \
                  -w /app \
                  maven:3.9.6-eclipse-temurin-21 \
                  mvn clean package
                '''
            }
        }

        stage('Docker Build') {
            steps {
                sh 'docker build -t $IMAGE_NAME .'
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                docker rm -f $CONTAINER_NAME || true
                docker run -d \
                  --name $CONTAINER_NAME \
                  --network $DOCKER_NETWORK \
                  -p 2008:8080 \
                  $IMAGE_NAME
                '''
            }
        }
    }
}
