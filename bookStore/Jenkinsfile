pipeline {
    agent any

    environment {
        IMAGE_NAME     = "bookstore-app"
        CONTAINER_NAME = "bookstore-app"
        APP_PORT       = "2008"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                sh '''
                docker run --rm \
                  -v "$WORKSPACE":/workspace \
                  -v "$HOME/.m2":/root/.m2 \
                  -w /workspace/bookStore \
                  maven:3.9.6-eclipse-temurin-21 \
                  mvn clean package
                '''
            }
        }

        stage('Docker Build') {
            steps {
                sh '''
                docker build -t $IMAGE_NAME bookStore
                '''
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                docker rm -f $CONTAINER_NAME || true

                docker run -d \
                  --name $CONTAINER_NAME \
                  --network ci-network \
                  -p $APP_PORT:$APP_PORT \
                  $IMAGE_NAME
                '''
            }
        }
    }
}
