pipeline {
    agent any

    environment {
        IMAGE_NAME = "bookstore-app"
        CONTAINER_NAME = "bookstore-app"
        NETWORK = "ci-network"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Docker Build') {
            steps {
                sh 'docker build -t $IMAGE_NAME .'
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                docker rm -f $CONTAINER_NAME || true
                docker run -d --name $CONTAINER_NAME --network $NETWORK -p 2008:2008 $IMAGE_NAME
                '''
            }
        }
    }
}
